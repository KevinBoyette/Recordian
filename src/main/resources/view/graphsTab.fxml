<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXRadioButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.*?>
<StackPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.GraphsTabController">
   <VBox alignment="CENTER" StackPane.alignment="CENTER">
      <children>
         <HBox alignment="CENTER">
            <children>
               <JFXRadioButton fx:id="barGraphButton" mnemonicParsing="false" selected="true" styleClass="graphTypeRadioButton" text="Bar Graph">
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="40.0" top="10.0" />
                  </HBox.margin>
                  <toggleGroup>
                     <ToggleGroup fx:id="graphType" />
                  </toggleGroup>
               </JFXRadioButton>
               <JFXRadioButton fx:id="pieChartButton" mnemonicParsing="false" styleClass="graphTypeRadioButton" text="Pie Chart" toggleGroup="$graphType">
                  <HBox.margin>
                     <Insets bottom="10.0" left="40.0" right="10.0" top="10.0" />
                  </HBox.margin>
               </JFXRadioButton>
            </children></HBox>
         <ScrollPane fx:id="graphScrollPane" VBox.vgrow="ALWAYS">
            <content>
               <VBox fx:id="graphContainer" alignment="CENTER" spacing="100.0" />
            </content></ScrollPane>
         <HBox alignment="CENTER_LEFT">
            <children>
                <JFXButton fx:id="generateReportButton" buttonType="RAISED" mnemonicParsing="false" ripplerFill="#003c82" styleClass="darkBlueButton" text="Export As PDF...">
                  <HBox.margin>
                     <Insets top="10.0" />
                  </HBox.margin></JFXButton>
            </children>
         </HBox>
      </children>
      <padding>
         <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
      </padding>
   </VBox>
</StackPane>
